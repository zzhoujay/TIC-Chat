<resources>

    <style name="InputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubmitButton" parent="GreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ToolBarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">?actionBarSize</item>
        <item name="android:background">@drawable/support_tool_bar_shadow</item>
    </style>

    <style name="LinkedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/material_grey_400</item>
    </style>

    <style name="ClickableButton">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AccentButton">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:background">@drawable/support_accent_button</item>
    </style>

    <style name="SettingItem" parent="Clickable">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="SettingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/font_content</item>
    </style>

    <style name="ProfileLeft">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/profile_left_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/profile_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/profile_left_margin</item>
    </style>

    <style name="ProfileRight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/profile_right_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/profile_left_margin</item>
        <item name="android:layout_marginRight">@dimen/profile_left_margin</item>
    </style>

    <style name="ProfileRight.Select" parent="Clickable">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/profile_right_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_left_margin</item>
        <item name="android:layout_marginBottom">@dimen/profile_left_margin</item>
        <item name="android:layout_marginRight">@dimen/profile_left_margin</item>
        <item name="android:textSize">@dimen/font_mid</item>
        <item name="android:textColor">@color/material_grey_800</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/support_submit_background</item>
    </style>

</resources>
