<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GreenButton">
        <item name="android:backgroundTint">@color/material_green_500</item>
    </style>

    <style name="ToolBarShadow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="tool_bar_color">@color/colorPrimary</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Clickable">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ClickableButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AccentButton">
        <item name="android:textColor">@color/material_white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
</resources>